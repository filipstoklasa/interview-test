generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Record {
  id            Int         @id @default(autoincrement())
  title         String
  description   String
  releaseYear   Int
  programType   ProgramType @relation(fields: [programTypeId], references: [id])
  programTypeId Int
}

model ProgramType {
  id     Int      @id @default(autoincrement())
  name   String
  Record Record[]
}